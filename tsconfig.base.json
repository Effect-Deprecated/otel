{
  "compilerOptions": {
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveSymlinks": true,
    "moduleResolution": "node",
    "noEmit": false,
    "lib": ["es2020"],
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "noErrorTruncation": true,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "baseUrl": ".",
    "paths": {
      "@effect-ts/otel/*": ["packages/otel/build/*"],
      "@effect-ts/otel": ["packages/otel/build"],
      "@effect-ts/otel-node/*": ["packages/otel-node/build/*"],
      "@effect-ts/otel-node": ["packages/otel-node/build"],
      "@effect-ts/otel-jaeger/*": ["packages/otel-jaeger/build/*"],
      "@effect-ts/otel-jaeger": ["packages/otel-jaeger/build"],
      "@effect-ts/otel-grpc/*": ["packages/otel-grpc/build/*"],
      "@effect-ts/otel-grpc": ["packages/otel-grpc/build"],
      "@effect-ts/otel-exporter-trace-otlp-grpc": ["packages/otel-exporter-trace-otlp-grpc/build"],
      "@effect-ts/otel-exporter-trace-otlp-grpc/*": ["packages/otel-exporter-trace-otlp-grpc/build/*"],
      "@effect-ts/otel-sdk-trace-node": ["packages/otel-sdk-trace-node/build"],
      "@effect-ts/otel-sdk-trace-node/*": ["packages/otel-sdk-trace-node/build/*"],
    }
  },
  "exclude": ["node_modules", "build", "lib"]
}
